<form class="bane-weapon-form">
    <div class="form-header">
        <img src="modules/stroud-dnd-helpers/images/icons/berserker.webp" alt="Stroud DnD" class="header-icon">
        <h2>Create Bane Weapon: {{item.name}}</h2>
    </div>

    {{#if hasExistingBane}}
    <div class="existing-bane-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Warning:</strong> This weapon already has bane properties. Creating a new bane weapon will overwrite the existing configuration.
        <div class="existing-bane-details">
            <strong>Current:</strong> {{existingBaneData.DieCount}}d{{existingBaneData.DieFaces}} {{existingBaneData.DamageType}} damage vs {{existingBaneData.CreatureType}}
        </div>
    </div>
    {{/if}}

    <div class="form-section">
        <h3>Target Creature Types</h3>
        <div class="creature-type-controls">
            <button type="button" class="select-all-creatures">Select All</button>
            <button type="button" class="select-none-creatures">Select None</button>
            <span class="selected-creatures-count">0 creature types selected</span>
        </div>
        
        <div class="creature-types-grid">
            {{#each creatureTypes}}
            <label class="creature-type-checkbox">
                <input type="checkbox" name="creatureTypes" value="{{value}}" {{#if selected}}checked{{/if}}>
                <span class="checkmark"></span>
                {{label}}
            </label>
            {{/each}}
        </div>
    </div>

    <div class="form-section">
        <h3>Damage Configuration</h3>
        <div class="form-row">
            <div class="form-group">
                <label for="dieCount">Number of Dice:</label>
                <input type="number" name="dieCount" id="dieCount" value="{{defaultDieCount}}" min="1" max="10" required>
            </div>
            
            <div class="form-group">
                <label for="dieType">Die Type:</label>
                <select name="dieType" id="dieType" required>
                    {{#each diceTypes}}
                    <option value="{{value}}" {{#if (eq value ../defaultDieType)}}selected{{/if}}>
                        d{{value}}
                    </option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="damageType">Damage Type:</label>
            <select name="damageType" id="damageType" required>
                {{#each damageTypes}}
                <option value="{{value}}" {{#if (eq value ../defaultDamageType)}}selected{{/if}}>
                    {{{label}}}
                </option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-section">
        <h3>Duration (Optional)</h3>
        <div class="form-group">
            <label for="duration">Duration in Hours (0 = Permanent):</label>
            <input type="number" name="duration" id="duration" value="{{defaultDuration}}" min="0" max="168">
            <small class="form-hint">Leave as 0 for permanent enhancement, or specify hours for temporary effect</small>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="create-bane-weapon">
            <i class="fas fa-magic"></i>
            {{#if hasExistingBane}}Update{{else}}Create{{/if}} Bane Weapon
        </button>
        <button type="button" class="cancel" onclick="this.closest('.app').querySelector('.header-button.close').click()">
            <i class="fas fa-times"></i>
            Cancel
        </button>
    </div>
</form>

<style>
.bane-weapon-form {
    --bg-primary: #ffffff;
    --bg-secondary: #f8f8f8;
    --bg-tertiary: #fafafa;
    --bg-warning: #fff3cd;
    --text-primary: #333;
    --text-secondary: #444;
    --text-muted: #666;
    --text-hint: #777;
    --text-warning: #856404;
    --border-primary: #ccc;
    --border-secondary: #ddd;
    --border-light: #eee;
    --border-warning: #ffecb5;
    --button-bg: #f8f8f8;
    --button-hover: #e8e8e8;
    --checkbox-hover: #f0f0f0;
    --accent-primary: #4a90d9;
    --accent-primary-hover: #357abd;
    --accent-secondary: #6c757d;
    --accent-secondary-hover: #545b62;
    --icon-warning: #ff9800;
}

/* Dark mode color scheme */
@media (prefers-color-scheme: dark) {
    .bane-weapon-form {
        --bg-primary: #2a2a2a;
        --bg-secondary: #353535;
        --bg-tertiary: #404040;
        --bg-warning: #3d3417;
        --text-primary: #e0e0e0;
        --text-secondary: #d0d0d0;
        --text-muted: #b0b0b0;
        --text-hint: #999;
        --text-warning: #ffd54f;
        --border-primary: #555;
        --border-secondary: #666;
        --border-light: #777;
        --border-warning: #665d2a;
        --button-bg: #404040;
        --button-hover: #4a4a4a;
        --checkbox-hover: #484848;
        --accent-primary: #5a9fd9;
        --accent-primary-hover: #4a8fc9;
        --accent-secondary: #7c8591;
        --accent-secondary-hover: #6c7582;
        --icon-warning: #ffb74d;
    }
}

/* Also support Foundry's explicit theme classes */
.theme-dark .bane-weapon-form,
[data-theme="dark"] .bane-weapon-form {
    --bg-primary: #2a2a2a;
    --bg-secondary: #353535;
    --bg-tertiary: #404040;
    --bg-warning: #3d3417;
    --text-primary: #e0e0e0;
    --text-secondary: #d0d0d0;
    --text-muted: #b0b0b0;
    --text-hint: #999;
    --text-warning: #ffd54f;
    --border-primary: #555;
    --border-secondary: #666;
    --border-light: #777;
    --border-warning: #665d2a;
    --button-bg: #404040;
    --button-hover: #4a4a4a;
    --checkbox-hover: #484848;
    --accent-primary: #5a9fd9;
    --accent-primary-hover: #4a8fc9;
    --accent-secondary: #7c8591;
    --accent-secondary-hover: #6c7582;
    --icon-warning: #ffb74d;
}

.bane-weapon-dialog .window-content {
    padding: 10px;
    background: var(--bg-primary);
}

.bane-weapon-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.form-header {
    display: flex;
    align-items: center;
    gap: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--border-primary);
}

.header-icon {
    width: 32px;
    height: 32px;
}

.form-header h2 {
    margin: 0;
    color: var(--text-primary);
}

.existing-bane-warning {
    background: var(--bg-warning);
    border: 1px solid var(--border-warning);
    color: var(--text-warning);
    padding: 10px;
    border-radius: 4px;
    margin-bottom: 15px;
}

.existing-bane-warning i {
    color: var(--icon-warning);
    margin-right: 5px;
}

.existing-bane-details {
    margin-top: 5px;
    font-size: 0.9em;
    font-style: italic;
}

.form-section {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.form-section h3 {
    margin: 0;
    color: var(--text-secondary);
    font-size: 1.1em;
    border-bottom: 1px solid var(--border-light);
    padding-bottom: 5px;
}

.creature-type-controls {
    display: flex;
    gap: 10px;
    align-items: center;
    margin-bottom: 10px;
}

.creature-type-controls button {
    padding: 4px 8px;
    font-size: 0.8em;
    border: 1px solid var(--border-primary);
    background: var(--button-bg);
    color: var(--text-primary);
    cursor: pointer;
}

.creature-type-controls button:hover {
    background: var(--button-hover);
}

.selected-creatures-count {
    font-style: italic;
    color: var(--text-muted);
    margin-left: auto;
}

.creature-types-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 8px;
    max-height: 200px;
    overflow-y: auto;
    padding: 10px;
    border: 1px solid var(--border-secondary);
    background: var(--bg-tertiary);
}

.creature-type-checkbox {
    display: flex;
    align-items: center;
    gap: 5px;
    cursor: pointer;
    padding: 2px;
    font-size: 0.9em;
    color: var(--text-primary);
}

.creature-type-checkbox:hover {
    background: var(--checkbox-hover);
}

.creature-type-checkbox input[type="checkbox"] {
    margin: 0;
}

.form-row {
    display: flex;
    gap: 15px;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 5px;
    flex: 1;
}

.form-group label {
    font-weight: bold;
    color: var(--text-secondary);
}

.form-group input,
.form-group select {
    padding: 8px 10px;
    border: 1px solid var(--border-primary);
    border-radius: 3px;
    height: 34px;
    line-height: 1.4;
    font-size: 14px;
    box-sizing: border-box;
    background: var(--bg-primary);
    color: var(--text-primary);
}

.form-group select {
    min-height: 34px;
    appearance: none;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 8px center;
    background-repeat: no-repeat;
    background-size: 16px;
    padding-right: 32px;
}

/* Dark mode dropdown arrow */
@media (prefers-color-scheme: dark) {
    .form-group select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23b0b0b0' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    }
}

.theme-dark .form-group select,
[data-theme="dark"] .form-group select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23b0b0b0' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
}

.form-group select option {
    padding: 8px;
    line-height: 1.4;
    font-size: 14px;
    background: var(--bg-primary);
    color: var(--text-primary);
}

.form-hint {
    color: var(--text-hint);
    font-style: italic;
    font-size: 0.8em;
}

.form-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    padding-top: 10px;
    border-top: 1px solid var(--border-light);
}

.form-actions button {
    padding: 8px 16px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 5px;
}

.create-bane-weapon {
    background: var(--accent-primary);
    color: white;
}

.create-bane-weapon:hover {
    background: var(--accent-primary-hover);
}

.cancel {
    background: var(--accent-secondary);
    color: white;
}

.cancel:hover {
    background: var(--accent-secondary-hover);
}
</style>
